extends ../layout

block content
  .container
    .row
      .page-header
        h1= title
      each cat in catetories
        if cat.movies && cat.movies.length >0
          .panel.panel-default
            .panel-heading
              h3 #{cat.name}
            .panel-body
              each item in cat.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      img(src="/images/poster.png",alt="#{item.title}")
                    .caption
                      h3= item.title
                      p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片 